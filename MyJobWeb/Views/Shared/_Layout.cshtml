    <link href="~/css/creative.min.css" rel="stylesheet">
    
   
</head>


<body id="page-top">
    @* Render body *@
    <div class="container body-content">

        <hr />

    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav" style="background-color:black">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="~/Home/Index" style="font-size:20px;">Job Offers</a>

            <a class="nav-item">
                @using (Html.BeginForm("IndexSearch", "JobDetails1", FormMethod.Get))
                {
                   
                        @Html.TextBox("searching",null,new { @style= "Height:50px;border:2px solid #ccc;border-radius: 5px;background-color: white; background-image: url('../../images/Capture.PNG');  background-repeat:no-repeat;background-position:15px 15px;transition: width 0.4s ease-in-out; " })
                  
                    

                    <input type="submit" name="Search" id="searchName" value="Search"
                           style="width:100px; height:50px; border: 2px solid #ccc; border-radius: 5px; background-color: white; background-image: url('../../images/Capture.PNG');  background-repeat:no-repeat; padding:8px 20px 8px 20px; background-position:10px 10px; transition: width 0.6s ease-in-out;  "  />

                }


            </a>



            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto my-2 my-lg-0">

                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="~/Home/About" style="font-size:20px;">About </a>

                    </li>
                    @*<li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="~/JobDetails1/IndexSearch">Search For Job</a>

                    </li>*@


                    <li class="nav-item">
                        @Html.Partial("_LoginPartial")

                    </li>
                  

                </ul>
            </div>
        </div>
    </nav>

    <div style="padding:50px 50px;">
        @RenderBody()
    </div>
   

    <!--Footer-->
    <div style="min-height:200px;height: auto !important;height:200px;margin: 0 auto -60px;">
        <footer class="bg-light py-5 ">
            <div class="container">
                <div class="row">
                    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
                    <div class="col-md-5">
                        <h3>

                            <i class="glyphicon glyphicon-question-sign" style="font-size:20px;"></i>
                            Who are us
                        </h3>
                        <div class="sufooter">

                            <p style="font-size:15px; color:#428bca;">
                                This is my first website to make for job searching and apply for jobs to help people
                                find what they realy want
                            </p>
                        </div>
                    </div>




                </div>
                <div class="col-md-5">
                    <h3 style="font-size:20px;">
                        <i class="glyphicon glyphicon-phone"></i>
                        Contact Us
                    </h3>
                    <ul>
                        <li style="font-size:20px;">
                            <a href="https://www.facebook.com/login.php"> Our page on facebook</a>
                        </li>
                        <li style="font-size:20px;">
                            <a href="https://twitter.com/">Our Page on twitter</a>
                        </li>
                        <li style="font-size:20px;">
                            <a href="https://youtupe.com/">Our Page on youtupe</a>
                        </li>
                        <li style="font-size:20px;">
                            <a href="~/Home/Contact"> Leave us a message</a>
                        </li>
                    </ul>

                </div>

            </div>


            <div class="subfooter">

                <div class="small text-center text-muted" style="font-size:10px;">Copyright &copy; 2020 - Job offers</div>

            </div>

        </footer>
    </div>
  
    <!-- Footer -->
    @*<footer class="bg-light py-5">
            <div class="container">
                <div class="small text-center text-muted">Copyright &copy; 2019 - Start Bootstrap</div>
            </div>
        </footer>*@
    <!-- Bootstrap core JavaScript -->
    @RenderSection("Scripts", false)
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Plugin JavaScript -->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>
    <!-- Custom scripts for this template -->
    <script src="~/js/creative.min.js"></script>











    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
