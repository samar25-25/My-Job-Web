@model MyJobWeb.Data.ApplyForJob

@{
    ViewBag.Title = "Edit1";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
}



@using (Html.BeginForm("Edit", "ApplyForJobs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="font-size:20px">Edit your apply form</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" ,@style="font-size:20px"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control", @style = "font-size:20px" } })
                @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger", @style = "font-size:20px" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Job_Id, "Job Title", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-size:20px" })
            <div class="col-md-10">
                @Html.DropDownList("Job_Id", null, htmlAttributes: new { @class = "form-control", @style = "font-size:20px" })
                @Html.ValidationMessageFor(model => model.Job_Id, "", new { @class = "text-danger", @style = "font-size:20px" })
            </div>
        </div>

       


        <div class="form-group">
            
            @Html.LabelFor(model => model.File_Id, "Upload CV:", htmlAttributes: new { @class = "control-label col-md-2", @style = "font-size:20px" })
            <div class="col-md-10">
                <input type="file" name="Upload" class="inputfile" id="file" />
                <label id="inputlabel" for="file">

                    Click Here
                    <i class="material-icons">
                        assignment_return &nbsp;
                    </i>

                </label>
                @Html.ValidationMessageFor(model => model.File_Id, "", new { @class = "text-danger" })
            </div>
        </div>

       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" style="font-size:20px;" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index","Home")
</div>
