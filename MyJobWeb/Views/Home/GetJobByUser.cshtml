@model IEnumerable<MyJobWeb.Data.ApplyForJob>

@{
    ViewBag.Title = "GetJobByUser";
<link href = "~/Content/StyleSheet1.css" rel = "stylesheet" />
}

<h2> All the jobs you applied in</h2>

<p style="font-size:20px;">
    @Html.ActionLink("Apply For New Job", "IndexSearch", "JobDetails1")
</p>
<table class="table">
    <tr>
        <th>
           Job Title
        </th>

        <th>
            Message Sent
        </th>
        <th>
            Apply For Job Date
        </th>
        <th>

        </th>
       
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobDetail.Job_title)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplyDate)
            </td>
            <td>
              
                @Html.ActionLink("Edit", "Edit1", new { id = item.Id }) |
                @Html.ActionLink("Details", "DetailsOfJob", new { id = item.Id }) 
              
            </td>
        </tr>
    }

</table>


